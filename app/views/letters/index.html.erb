<% provide(:title, 'All Letters') %>
<%= render 'shared/modal' %>

<table class="table table-hover table-striped table-bordered" >
  <thead>
      <tr>
	  <th class="tbl_sm"><%= sortable 'id', '#' %> </th>
	  <th class="tbl_md"><%= sortable 'patient_id', 'Re: Patient' %></th>
	  <th class="tbl_lmd">From</th>
	  <th class="tbl_lmd">To</th>
	  <th class="tbl_lmd">Address</th>
	  <th class="tbl_lg">Title</th>
	  <th> <%= sortable 'date' %></th>
	  <th class="tbl_sm"></th>
	  <th class="tbl_sm"></th>
	  <th class="tbl_sm"></th>
      </tr>
  </thead>
  <tbody>
  <%= render @letters, remote: device_is_desktop? %>
  </tbody>
</table>

<div class="bottom_nav">
<%= will_paginate @letters, class: "btn" %>
</div>
