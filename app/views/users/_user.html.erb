 <tr>
  <td><%= user.email %></td>
  <td class='text-center'><%= user.role %></td>
  <td class='text-center'><%= user.confirmed? %></td>
  <td><%= user.patient? %></td>
  <td class='text-center'><%= user.created_at.to_date %></td>
  <td class='text-center'><%= user.sign_in_count %></td>
  <td class='text-center'><%= user.last_sign_in_at %></td>
  <td class='text-center'><%= user.invited_by %></td>

   <% if current_user?(user) %>
       <td colspan=3></td>
     <% else %>
       <td class="text-center"><%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_user_path(user),  method: :get, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %> </td>
       <td class="text-center"><%= link_to '<i class="glyphicon glyphicon-random"></i>'.html_safe, switch_user_path(user),  method: :get %> </td>
       <td class="text-center"><%= link_to '<i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, user, method: :delete, data: { confirm: "Delete user #{user.name}, #{user.email}?" } %></td>
     <% end %>
 </tr>
