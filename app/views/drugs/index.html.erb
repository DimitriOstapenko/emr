<% provide(:title, 'All Medications') %>
<%= render "shared/modal" %>

<table class="table table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_md">Name</th>
	  <th>Generic Name</th>
          <th>Streng.</th>
	  <th>Dose</th>
	  <th>Freq.</th>
	  <th>Amount</th>
	  <th>Format</th>
	  <th>Route</th>
	  <th>Dur.Cnt</th>
	  <th>Dur.Unit</th>
	  <th>Refills</th>
	  <%# if current_user.doctor? %>
	    <th class='tbl_sm'></th>
	    <th class='tbl_sm'></th>
     	  <%# end %>
      </tr>
  </thead>
  <tbody>

  <%= render @drugs, remote: device_is_desktop? %>

  </tbody>
</table>


<div class="row">
<div class="bottom_buttons ">
<%= button_to "Add Medication", new_drug_path, class: "btn btn-primary col-md-2", method: :get %>
</div>
</div>

<div class="my_pagination">
<%= will_paginate @drugs %>
</div>
