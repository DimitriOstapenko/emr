<% provide(:title, 'All Reports') %>

<%= render 'shared/modal' %>

<table class="table table-hover table-striped table-bordered">  <!--table table-hover table-condensed" >  -->
  <thead>
      <tr>
	  <th class='tbl_sm'><%= sortable 'id', '#' %></th>
          <th>Doctor</th>
          <th class='tbl_lmd'>Report</th>
	  <th><%= sortable 'rtype', 'Type' %></th>
          <th>Timeframe</th>
	  <th cless='tbl_llg'><%= sortable 'sdate', 'Date Range' %></th>
	  <th><%= sortable 'created_at', 'Created' %></th>
          <th class='tbl_md'>Download</th>
	   <% if current_user.admin?  %>
          <th class='tbl_sm'></th>
	  <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @reports %>

  </tbody>
</table>

<div class="row">
<div class="bottom_buttons ">
<%= button_to "Create New Report", new_report_path, class: "btn btn-primary col-md-2", method: 'get'  %>
</div>

<div class="bottom_nav my_pagination">
<%= will_paginate @reports, class: "btn" %> 
</div>
