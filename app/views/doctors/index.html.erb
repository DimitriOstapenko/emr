<% provide(:title, 'All doctors') %>
<%= render "shared/modal", size: 'lg' %>

<table class="table table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class='tbl_lmd'>Name</th>
          <th>Provider#</th>
          <th>Group#</th>
          <th>CPSO#</th>
	  <th>WSIB#</th>
          <th class='tbl_sm'>Bills?</th>
          <th>Bil.Fmt</th>
          <th class='tbl_md'>City</th>
          <th>Phone </th>
          <th > email</th>
	  <th class='tbl_md text-center'>Registered?</th>
	  <th class='tbl_md text-center'>Invite</th>
          <% if current_user.admin? %>
            <th  colspan=2 class="tbl_sm"></th>
          <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @doctors, remote: device_is_desktop? %>

  </tbody>
</table>

<div class="row">
<div class="bottom_buttons ">
<%= button_to "Add New Doctor", new_doctor_path, class: "btn btn-primary col-md-2", method: :get %>
</div>

<div class="bottom_nav my_pagination">
<%= will_paginate @doctors, class: "btn" %>
</div>
