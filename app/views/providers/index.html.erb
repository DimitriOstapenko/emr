<% provide(:title, 'All providers') %>
<%= render "shared/modal", size: 'lg' %>

<table class="table table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_lg">Name</th>
          <th class="tbl_lg">Address</th>
          <th>City</th>
	  <th>Prov.</th>
	  <th>Postal</th>
	  <th>Phone</th>
	  <th>Phone2</th>
	  <th>Fax</th>
	  <% unless current_user.doctor? %>
	     <th class="tbl_sm"></th>
	  <% end %>
	  <% if  current_user.admin? %>
	     <th class="tbl_sm"></th>
     	  <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @providers, remote: device_is_desktop? %>

  </tbody>
</table>

<div class="row">
<div class="bottom_buttons">
<% unless current_user.doctor? %>
<%= button_to "Add Provider", new_provider_path, class: "btn btn-primary col-md-2", :method => "get" %>
<% end %>
</div>

<div class="bottom_nav my_pagination">
<%= will_paginate @providers, class: "btn" %>
</div>
