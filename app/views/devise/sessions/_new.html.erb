<% email = current_patient.email if current_patient.present? %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<% form_class= device_is_mobile? ? 'reg-form-control' : '' %>

<div class='form-group row'>
<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
<div class="card my-auto">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", value: email, class: form_class } %>
              
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: form_class } %>
    <%# f.input :remember_me, as: :boolean, input_html: {style: 'width: 30px;' } %>
    <%= f.hidden_field :remember_me,  value: true %>

    <%= f.button :submit, "Log in", class: "btn btn-primary" %>

<%# render "devise/shared/links" %>
</div>
</div>
</div>
<% end %>
