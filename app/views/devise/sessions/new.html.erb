<% email = current_patient.email if current_patient.present? %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<% form_class= device_is_mobile? ? 'reg-form-control' : '' %>


<% if current_patient && current_patient.user && current_patient.user.confirmed_at %>
<h2> Welcome back, <%= current_patient.fname %>! Please log in below </h2>
<% end %>

<div class='form-group row align-center'>
<div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
<div class="well">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", value: email, class: form_class } %>
              
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: form_class } %>
    <%= f.input :remember_me, as: :boolean, input_html: {style: 'width: 20px; margin-top: 20px;' } %>

    <%= f.button :submit, "Log in to book a visit", class: "btn btn-primary" %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<% end %>
