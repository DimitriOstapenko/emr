<!-- Visit panel on right hand side of patient profile -->

<div class='pt-3'></div>

<%= render "ai_chat" %>

    <h3>Visits: (<%= @patient.visits.count %>)</h3>
    <% if @patient.visits.any? %>
      <table class="table table-hover table-striped table-bordered">
  	  <thead>
	  <tr>
	    <th>Date</th>
            <th>Doctor</th>
	    <th>Diagnosis</th>
	    <th class="tbl_sm">Meds Renewal?</th>
            <th class="text-center">Edit</th>
	    <th class="text-center">Cancel</th>
	  </tr>
	  <tbody>

        <%= render @visits, remote: false %>

          </tbody>
	</table>

	<div class="spacer-10"></div>
	<div class="row">
	  <div class="col-md-12"> <%= link_to "Print Visit History", visit_history_patient_path(@patient),  remote: device_is_desktop?, 'data-bs-toggle':  "modal", 'data-bs-target': '#modal-window', class: "btn btn-info", method: 'get', onclick: "set_lg_modal()" %> </div>
	</div>
	<div class="spacer-10"></div>
	<div class="row" style="float: right">
	<%= will_paginate @visits %>
        </div>
        
    <% end %>
