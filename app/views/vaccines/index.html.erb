<% provide(:title, 'All Vaccines') %>
<%= render "shared/modal", size: 'lg' %>

<table class="table table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_md">Name</th>
          <th class="tbl_lg">Target</th>
          <th>Route</th>
	  <th>Dose</th>
	  <th>DIN</th>
	  <th>Notes</th>
	  <% unless current_user.doctor? %>
  	    <th class="tbl_sm"></th>
	  <% end %>
	  <% if  current_user.admin? %>
	    <th class="tbl_sm"></th>
     	  <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @vaccines, remote: device_is_desktop? %>

  </tbody>
</table>

<div class="row">
<div class="bottom_buttons ">
<%= button_to "Add New Vaccine", new_vaccine_path, class: "btn btn-primary col-md-2", :method => "get" %>
</div>

<div class="my_pagination">
<%= will_paginate @vaccines %>
</div>
